
config system
	option hostname 'mr3420v3'
	option zonename 'Asia/Almaty'
	option timezone 'ALMT-6'
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'

config timeserver 'ntp'
	option enabled '1'
	option enable_server '0'
	list server '0.lede.pool.ntp.org'
	list server '1.lede.pool.ntp.org'
	list server '2.lede.pool.ntp.org'
	list server '3.lede.pool.ntp.org'

config led 'led_wan'
	option name 'WAN'
	option sysfs 'tp-link:green:wan'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'eth1'
	option default '0'

config led 'led_lan1'
	option name 'LAN1'
	option sysfs 'tp-link:green:lan1'
	option trigger 'switch0'
	option port_mask '0x10'
	option default '0'

config led 'led_lan2'
	option name 'LAN2'
	option sysfs 'tp-link:green:lan2'
	option trigger 'switch0'
	option port_mask '0x08'
	option default '0'

config led 'led_lan3'
	option name 'LAN3'
	option sysfs 'tp-link:green:lan3'
	option trigger 'switch0'
	option port_mask '0x04'
	option default '0'

config led 'led_lan4'
	option name 'LAN4'
	option sysfs 'tp-link:green:lan4'
	option trigger 'switch0'
	option port_mask '0x02'
	option default '0'

config led 'led_wlan'
	option name 'WLAN'
	option sysfs 'tp-link:green:wlan'
	option default '0'
	option trigger 'phy0tpt'

config led 'led_usb'
	option name 'USB'
	option sysfs 'tp-link:green:3g'
	option default '0'
	option trigger 'usb-host'

config watchcat
	option period '6h'
	option mode 'ping'
	option pinghosts '8.8.8.8'
	option forcedelay '30'

