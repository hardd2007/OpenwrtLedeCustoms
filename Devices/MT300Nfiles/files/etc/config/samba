config samba
	option workgroup 'HOME'
	option homes '1'
	option description 'Portable router HardD-WRT'
	option name 'HardD-WRT'

config sambashare
		option name 'PUB'
		option path '/tmp/mnt-rw'
		option read_only 'no'
		option guest_ok 'yes'

config sambashare
			option name 'PUB-ram-tmp'
			option path '/tmp/mnt-tmp'
			option read_only 'no'
			option guest_ok 'yes'
