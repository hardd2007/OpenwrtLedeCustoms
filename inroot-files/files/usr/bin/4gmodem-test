#!/bin/sh

# (c) 2010-2013 Cezary Jackiewicz <cezary@eko.one.pl>

DEVICE=$(uci -q get 4gmodem.@4gmodem[0].device)
if [ "x$DEVICE" = "x" ]; then
	echo "Brak podanego urzadzenia w konfiguracji!"
	exit 0
fi
if [ ! -e $DEVICE ]; then
	echo "Brak urzadzenia $DEVICE!"
	exit 0
fi

# gcom -d $DEVICE reg
O=$(gcom -d $DEVICE -s /usr/share/4gmodem/scripts/4gmodem.gcom)

echo "$O"

echo "---------------------------------------------------------------"
ls /dev/tty*
echo "---------------------------------------------------------------"
if [ -e /proc/bus/usb/devices ]; then
	cat /proc/bus/usb/devices
else
	[ -e /sys/kernel/debug/usb/devices ] && cat /sys/kernel/debug/usb/devices
fi
echo "---------------------------------------------------------------"
uci show 4gmodem

exit 0
